        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>colin.stone@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ketan.mehta@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.Discount</field>
                <operation>greaterOrEqual</operation>
                <value>21</value>
            </criteriaItems>
        </entryCriteria>
        <label>PNG Group CFO &amp; Group CEO Approval</label>
        <name>PNG_Group_CFO_Group_CEO_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>PNG_Email_Templates/PNG_Discount_Approval_Request_email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND ((4 AND 5) OR 6)</booleanFilter>
        <criteriaItems>
            <field>Quote.Discount</field>
