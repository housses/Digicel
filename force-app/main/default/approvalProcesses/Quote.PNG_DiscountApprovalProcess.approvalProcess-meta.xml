                <value>6</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>PNG Head of B2B (BS CEO) Approval</label>
        <name>PNG_Head_of_B2B_BS_CEO_Approval</name>
