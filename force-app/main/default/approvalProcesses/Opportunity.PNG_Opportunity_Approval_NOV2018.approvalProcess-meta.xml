<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PNG_Sales_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Opportunity_UID__c</field>
        <field>Account</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Product_Level_1__c</field>
        <field>Total_Recurring_Revenue__c</field>
        <field>Net_Monthly_Revenue__c</field>
        <field>Total_OTC_SP__c</field>
        <field>Contract_Term_SP__c</field>
        <field>Contract_Value_SP__c</field>
        <field>Estimated_Billed_Date__c</field>
        <field>CloseDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opportunity_Revenue_Validation_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PreSales_Solution_Design_Approve</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>richard.cadet@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Solution Design</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Solution_Design_Approved__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Solution Design Approval</label>
        <name>Solution_Design_Approval</name>
        <rejectionActions>
            <action>
                <name>Opportunity_Revenue_Validation_has_been_rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process for PreSales to validate the opportunity</description>
    <emailTemplate>Group_Approval_Email_Templates/C_CA_DigiBus_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3) AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG ICT</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Digicel_Country__c</field>
            <operation>equals</operation>
            <value>PNG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.HasOpportunityLineItem</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>startsWith</operation>
            <value>Digicel PNG ICT</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>startsWith</operation>
            <value>Digicel PNG GSM</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Opportunity_Stage</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>PNG Opportunity Approval - NOV2018</label>
    <postTemplate>Digicel_Business_Approval_Post</postTemplate>
    <processOrder>25</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
