<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Owner</field>
        <field>Name</field>
        <field>Opportunity_UID__c</field>
        <field>Product_Level_1__c</field>
        <field>Net_Monthly_Revenue__c</field>
        <field>Total_OTC_SP__c</field>
        <field>Contract_Term_SP__c</field>
        <field>Contract_Value_SP__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rafael.rico@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Closed Won</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval for Closed Won Opportunities</label>
        <name>Approval_for_Closed_Won_Opportunities</name>
    </approvalStep>
    <emailTemplate>Digicel_PNG_Approval_Email_Templates/Digicel_PNG_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.HasOpportunityLineItem</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Digicel_Country__c</field>
            <operation>equals</operation>
            <value>PNG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG ICT</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Product_Level_1__c</field>
            <operation>notEqual</operation>
            <value>Mobile/Postpaid</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submitted_for_Approval_State_Change</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PNG Opportunity Approval - JUN2019</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <postTemplate>Digicel_PNG_Approval_Post</postTemplate>
    <processOrder>30</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
