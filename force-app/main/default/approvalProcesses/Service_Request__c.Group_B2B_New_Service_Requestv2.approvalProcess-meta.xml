<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>anthony.wharwood@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>michael.barrow@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>The SR requires special attention from the Group Service Delivery Team</description>
        <entryCriteria>
            <criteriaItems>
                <field>Service_Request__c.Status__c</field>
                <operation>notEqual</operation>
                <value>Installed</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>SR Assigned to Group SD</label>
        <name>SR_Assigned_to_Group_SD</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Service_Request_Completed</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>anthony.wharwood@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>michael.barrow@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>This step ensures that all SRs have been vetted after Install, in order to be moved to Completed.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Service_Request__c.Status__c</field>
                <operation>equals</operation>
                <value>Installed</value>
            </criteriaItems>
        </entryCriteria>
        <label>SR Completed</label>
        <name>SR_Completed</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Pilot_Email_Templates/New_Service_Request_General</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Service_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Change Request,Disconnection,Survey,Field Survey,Installation</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Assigned_Request_to_Group_SD_Team</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Group B2B New Service Requestv2</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
