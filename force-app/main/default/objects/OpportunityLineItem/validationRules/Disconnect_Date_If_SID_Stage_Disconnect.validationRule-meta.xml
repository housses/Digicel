<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Disconnect_Date_If_SID_Stage_Disconnect</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( SID_Stage__c , &quot;Disconnected&quot;),ISBLANK( Disconnected_Date__c))

&amp;&amp; $Profile.Name &lt;&gt;&quot;System Administrator&quot;</errorConditionFormula>
    <errorDisplayField>Disconnected_Date__c</errorDisplayField>
    <errorMessage>You must enter a disconnected date when the SID Stage is Disconnected.</errorMessage>
</ValidationRule>
