<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Trend_Opportunities_Must_Have_Products</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL(StageName, &quot;Commitment&quot;), 
HasOpportunityLineItem = FALSE 
)

&amp;&amp; $Profile.Name &lt;&gt;&quot;System Administrator&quot;</errorConditionFormula>
    <errorMessage>You have not added a product to your opportunity, in order to advance the opportunity stage you will need to cancel your change and then add a product</errorMessage>
</ValidationRule>
