            </criteriaItems>
            <criteriaItems>
                <field>Account.Name</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Case.ContactEmail</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Case.FORMULA_Contact_Email__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>notEqual</operation>
                <value>mailer-daemon@salesforce.com</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>notEqual</operation>
                <value>itservicedesk@nac.com.pg</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.SuppliedName</field>
                <operation>notEqual</operation>
                <value>Mail Delivery System</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>notEqual</operation>
                <value>support@imperiumapp.com</value>
