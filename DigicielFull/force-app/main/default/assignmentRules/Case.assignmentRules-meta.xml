<?xml version="1.0" encoding="UTF-8"?>
<AssignmentRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignmentRule>
        <fullName>Digicel Cases</fullName>
        <active>true</active>
        <ruleEntry>
            <assignedTo>Trinidad_SOC_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Digicel Trinidad Broadband Request,Digicel Trinidad Data Request,Digicel Trinidad Voice Request</value>
            </criteriaItems>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>PNG_PremiumCorporateCareCaseQueue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Digicel PNG Support Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.PNG_Account_Level__c</field>
                <operation>equals</operation>
                <value>Gold</value>
            </criteriaItems>
            <team>PNG - Customer Relationship Management Team</team>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>PNG_Unassigned_Case_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Digicel PNG Support Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.PNG_Account_Level__c</field>
                <operation>equals</operation>
                <value>Silver,Bronze</value>
            </criteriaItems>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>PNG_Sales_Operations</assignedTo>
            <assignedToType>Queue</assignedToType>
            <booleanFilter>1 AND (2 OR 3)</booleanFilter>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Digicel PNG Implementation Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.PNG_CaseType__c</field>
                <operation>equals</operation>
                <value>ICT</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.PNG_CaseType__c</field>
                <operation>equals</operation>
                <value>ICT &amp; GSM</value>
            </criteriaItems>
            <team>PNG - Sales Operation Team</team>
            <template>PNG_Email_Templates/PNG_CaseImplementationEmail</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>PNG_Mobile_Activation</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Digicel PNG Implementation Case</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.PNG_CaseType__c</field>
                <operation>equals</operation>
                <value>GSM</value>
            </criteriaItems>
        </ruleEntry>
    </assignmentRule>
</AssignmentRules>
