<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>New_Employee_Start_Date</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISPICKVAL( Employee_Status__c , &apos;New Employee&apos;),
    ISBLANK(  Date_Hired__c  )
)</errorConditionFormula>
    <errorDisplayField>Date_Hired__c</errorDisplayField>
    <errorMessage>Please populate Hire Date</errorMessage>
</ValidationRule>
