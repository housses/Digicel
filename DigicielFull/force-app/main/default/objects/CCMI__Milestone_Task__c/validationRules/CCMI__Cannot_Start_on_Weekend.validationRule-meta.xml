<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CCMI__Cannot_Start_on_Weekend</fullName>
    <active>true</active>
    <errorConditionFormula>MOD(CCMI__Desired_Start__c - DATE(1900, 1, 8), 7) &gt; 4</errorConditionFormula>
    <errorDisplayField>CCMI__Desired_Start__c</errorDisplayField>
    <errorMessage>Tasks must start on a weekday</errorMessage>
</ValidationRule>
