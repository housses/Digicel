<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Related_to_or_Name_must_have_a_value</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISBLANK(WhoId),ISBLANK(WhatId))</errorConditionFormula>
    <errorMessage>The Related to or Name fields must be completed. Please include the value in at least one of them</errorMessage>
</ValidationRule>
