<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contract_Period_Not_Zero</fullName>
    <active>true</active>
    <description>Rule to ensure that contract period field does not allow zero or negative number</description>
    <errorConditionFormula>Contract_Period_Months__c   &lt;=  0

&amp;&amp; $Profile.Name &lt;&gt; &quot;System Administrator&quot;
&amp;&amp; NOT(CONTAINS(Opportunity.RecordType.DeveloperName, &quot;Trend&quot;))
&amp;&amp; NOT(CONTAINS(Opportunity.RecordType.DeveloperName, &quot;PNG&quot;))</errorConditionFormula>
    <errorMessage>Contract Period field cannot be less than or equal to zero (0)</errorMessage>
</ValidationRule>
