<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Update_Completed_Date</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL( Status__c , &quot;Complete&quot;), 
ISBLANK( Completed_Date__c ))</errorConditionFormula>
    <errorDisplayField>Completed_Date__c</errorDisplayField>
    <errorMessage>Opps You forgot to enter the Completed Date</errorMessage>
</ValidationRule>
