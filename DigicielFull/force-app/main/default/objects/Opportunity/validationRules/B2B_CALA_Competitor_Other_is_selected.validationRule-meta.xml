<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>B2B_CALA_Competitor_Other_is_selected</fullName>
    <active>true</active>
    <description>users must put in other competitor if Other is selected in picklist</description>
    <errorConditionFormula>AND( INCLUDES(Competitor__c, &quot;Other&quot;),  ISBLANK(Other_Competitor__c ))

&amp;&amp; $Profile.Name &lt;&gt;&quot;System Administrator&quot;</errorConditionFormula>
    <errorDisplayField>Other_Competitor__c</errorDisplayField>
    <errorMessage>Please Fill Out The Other Competitor Field</errorMessage>
</ValidationRule>
