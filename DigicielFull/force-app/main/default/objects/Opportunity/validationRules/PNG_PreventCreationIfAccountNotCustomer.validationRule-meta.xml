<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PNG_PreventCreationIfAccountNotCustomer</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW(),
RecordTypeId = LEFT( $Label.PNG_OpprtunityRecordTypeId ,15),
NOT(ISPICKVAL(Account.Type, &apos;Customer&apos;)) 
)</errorConditionFormula>
    <errorMessage>Cannot create Opportunity for Account whose Type is not Customer</errorMessage>
</ValidationRule>
