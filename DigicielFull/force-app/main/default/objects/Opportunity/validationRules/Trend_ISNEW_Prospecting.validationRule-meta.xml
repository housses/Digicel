<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Trend_ISNEW_Prospecting</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
$RecordType.Id&lt;&gt;&quot;012d0000000lLzh&quot;,
IF(CONTAINS(RecordType.DeveloperName, &quot;Trend&quot;)&amp;&amp;ISNEW(),
NOT(ISPICKVAL( StageName, &quot;Prospecting&quot;))
,FALSE))</errorConditionFormula>
    <errorDisplayField>StageName</errorDisplayField>
    <errorMessage>When the opportunity is created, the stage cannot be different than Prospecting.</errorMessage>
</ValidationRule>
