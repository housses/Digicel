<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>christine.pala@digicelgroup.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>rafael.rico@digicelgroup.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Account</field>
        <field>Owner</field>
        <field>Name</field>
        <field>Opportunity_UID__c</field>
        <field>Product_Level_1__c</field>
        <field>Net_Monthly_Revenue__c</field>
        <field>Total_OTC_SP__c</field>
        <field>Contract_Term_SP__c</field>
        <field>Contract_Value_SP__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opp_Status_Submitted_for_SalesOps</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_Step_1_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>christine.pala@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rafael.rico@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>This is to verify with Management if the contract is done up properly</description>
        <entryCriteria>
            <criteriaItems>
                <field>User.UserRole</field>
                <operation>startsWith</operation>
                <value>PNG</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Product_Level_1__c</field>
                <operation>notEqual</operation>
                <value>Mobile/Postpaid</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>Digicel PNG ICT</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Opportunity_Status__c</field>
                <operation>equals</operation>
                <value>Submitted for Contract Review and Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Submitted for Contract Review and Approval</label>
        <name>Submitted_for_Contract_Review_and_Approval</name>
        <rejectionActions>
            <action>
                <name>Opp_Status_Rejected_By_Contract_Review</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Opp_Status_SalesOps_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_Step_2_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>christine.pala@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rafael.rico@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Opportunity_Status__c</field>
                <operation>equals</operation>
                <value>Submitted for Sales Operations Approval</value>
            </criteriaItems>
        </entryCriteria>
        <label>Submitted for Sales Operations Approval</label>
        <name>Submitted_for_Sales_Operations_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Opp_Status_Rejected_By_Sales_Ops</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Digicel_PNG_Approval_Email_Templates/Digicel_PNG_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Product_Level_1__c</field>
            <operation>notEqual</operation>
            <value>Mobile/Postpaid</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Digicel_Country__c</field>
            <operation>equals</operation>
            <value>PNG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG ICT</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>startsWith</operation>
            <value>PNG</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Closed Won</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PNG_Approval_Request_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Opportunity_Stage_Proposal_Acceptance</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_Approval_Request_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Ops_Status_Submitted_for_Contract_View</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PNG Opportunity Approval - JULY2019v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <postTemplate>Digicel_PNG_Approval_Post</postTemplate>
    <processOrder>27</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Approval_Recalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opp_Status_Blank</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
