<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PNG</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>QuoteNumber</field>
        <field>Name</field>
        <field>Account</field>
        <field>LineItemCount</field>
        <field>X1st_Monthly_Fee__c</field>
        <field>Installation_Setup_Fee__c</field>
        <field>Total_Hardware_fee__c</field>
        <field>ContractTerm__c</field>
        <field>Contract_Value_png__c</field>
        <field>Subtotal</field>
        <field>Tax</field>
        <field>TotalPrice</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ahmed.hassan@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jemimah.niara@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lesliemcneil.ataembo@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mairi.sabila@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request For Approval From Technical Team</label>
        <name>PNG_RequestForApprovalFromTechnicalTeam</name>
    </approvalStep>
    <emailTemplate>PNG_Email_Templates/PNG_TechnicalFeasibilityApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 and 6 and 7</booleanFilter>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG Draft Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Needs Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PNG_OpportunityType__c</field>
            <operation>equals</operation>
            <value>ICT,ICT &amp; GSM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Technical Feasibility</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Technical_Feasibility__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PNG_TechnicalFeasibilityCheck__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Technical_Feasibility_Approved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_TechnicalFeasibilityApprovedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateFeasibilityApprovedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateStatusFeasibilityApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Technical_Feasibility_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_TechnicalFeasibilityRejected_mailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateFeasibilityRejectedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateStatusFeasibilityRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PNG_UpdateStatusToInFeasibilityCheck</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Technical Feasibility Approval Process</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
