<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>QuoteNumber</field>
        <field>Name</field>
        <field>Account</field>
        <field>LineItemCount</field>
        <field>X1st_Monthly_Fee__c</field>
        <field>Installation_Setup_Fee__c</field>
        <field>Total_Hardware_fee__c</field>
        <field>Subtotal</field>
        <field>Tax</field>
        <field>TotalPrice</field>
        <field>ContractTerm__c</field>
        <field>Total_Contract_Value_sp__c</field>
        <field>PNG_TechnicalFeasibilityApprovedDate__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>PNG_ClearStep1InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_UpdateFeasibilityApprovedDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_UpdateStatusFeasibilityApproved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.Needing_Technical_Feasibility__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Technical Feasibility</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.PNG_TechnicalFeasibilityCheck__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Request Approval From Technical Feasibility</label>
        <name>Request_Approval_From_Technical_Feasibility</name>
        <rejectionActions>
            <action>
                <name>PNG_ClearStep1InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_UpdateFeasibilityRejectedDate</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PNG_UpdateStatusFeasibilityRejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>PNG_UpdateStep2InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.PNG_FixedVoiceLineItems__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Solution Design</value>
            </criteriaItems>
            <criteriaItems>
                <field>Quote.Voice_Solution_Approved__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Request For Approval From Fixed Voice Team</label>
        <name>PNG_RequestForApprovalFromFixedVoiceTeam</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>PNG_ClearStep2InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>PNG_UpdateStep3InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Quote.Needing_Pre_Sales__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Solution Design</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Solution_Design_Approved__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <label>Request Approval From Pre-Sales Team</label>
        <name>PNG_RequestApprovalFromPreSalesTeam</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>PNG_ClearStep3InitiatedDate</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval process if for Pre-Sales checks and Fixed Voice products.</description>
    <emailTemplate>PNG_Email_Templates/PNG_TechnicalPreSalesApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND (5  or 6 or 7)</booleanFilter>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG Draft Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Needs Review,Technical Feasibility Approved,In Solution Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PNG_OpportunityType__c</field>
            <operation>equals</operation>
            <value>ICT,ICT &amp; GSM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Technical Feasibility,Solution Design</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Pre_Sales__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.PNG_FixedVoiceLineItems__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Technical_Feasibility__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_ClearStep2InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_ClearStep3InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionApprovedDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_ClearStep2InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_ClearStep3InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_SolutionDesignRejectedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionRejectedDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PNG_UpdateStatusToInFeasibilityCheck</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PNG Technical Feasibility &amp; PreSales</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
