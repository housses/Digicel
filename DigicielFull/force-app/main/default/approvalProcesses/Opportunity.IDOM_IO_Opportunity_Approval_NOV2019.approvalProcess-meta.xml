<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Chairman_s_Committee</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>I_O_Head_of_Sales</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>MRC__c</field>
        <field>OTC__c</field>
        <field>Contract_Value__c</field>
        <field>Net_AOP_Installation_OTC__c</field>
        <field>Net_Contract_Value_Total__c</field>
        <field>Net_AOP_Total__c</field>
        <field>NextStep</field>
        <field>Description</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>johan.sels@digicelgroup.fr</name>
                <type>user</type>
            </approver>
            <approver>
                <name>vincent.monnier@digicelgroup.fr</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 AND 2</booleanFilter>
            <criteriaItems>
                <field>User.Digicel_Company_Name__c</field>
                <operation>equals</operation>
                <value>IDOM Technologies</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.UserRole</field>
                <operation>startsWith</operation>
                <value>IDOM Technologies,IDOM - IO -,IDOM - Indian Ocean</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Indian Ocean ICT Opportunities</label>
        <name>Indian_Ocean_ICT_Opportunities</name>
    </approvalStep>
    <description>This approval process is used by the IDOM IO ICT team to request approval from Revenue Assurance / Finance</description>
    <emailTemplate>Group_Approval_Email_Templates/C_CA_DigiBus_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.UserRole</field>
            <operation>startsWith</operation>
            <value>IDOM Technologies,IDOM - Indian Ocean,IDOM - IO</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Proposal Acceptance</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>IDOM IO ICT</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Opportunity_Change_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Revenue_Validation_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Opportunity_Status_Approved_by_Finance</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RV_Commercial_Review_Approved_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Opportunity_Revenue_Validation_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Opportunity_Status_Rejected_by_Finance</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_RV_Field_on_Cloned_Opportunities</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Opp_Status_Submitted_Finance_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Status_Approved_by_Finance</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>IDOM - IO Opportunity Approval - NOV2019</label>
    <postTemplate>Digicel_Business_Approval_Post</postTemplate>
    <processOrder>16</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
