<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Chairman_s_Committee</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Chairman_s_Committee</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Digicel_Country__c</field>
        <field>Manager_Name__c</field>
        <field>Contract_Value__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kavisha.ramkissoon@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>maria.quintal@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>stanley.soman@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Number_of_files_attached__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Bid Governance</label>
        <name>Bid_Governance</name>
    </approvalStep>
    <description>Opps over $100 k TCV. All markets go to bid governance.</description>
    <emailTemplate>Group_Approval_Email_Templates/C_CA_DigiBus_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Commercial Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Digicel Business Opportunity</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Contract_Value__c</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;USD 100,000&quot;</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Status_Commercial_Rev_Approv</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Bid_Governance_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Date_Approved_or_Rejected_Commercial_Rev</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RV_Commercial_Review_Approved_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Proposal_Review</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Bid_Governance_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Change_Stage_to_Prospecting_Qualificat</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Commercial Review JULY 2022</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
