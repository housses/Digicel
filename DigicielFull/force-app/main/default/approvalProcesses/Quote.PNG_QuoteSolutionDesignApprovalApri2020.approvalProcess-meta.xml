<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>QuoteNumber</field>
        <field>Name</field>
        <field>Customer_Name__c</field>
        <field>LineItemCount</field>
        <field>X1st_Monthly_Fee__c</field>
        <field>Installation_Setup_Fee__c</field>
        <field>Total_Hardware_fee__c</field>
        <field>ContractTerm__c</field>
        <field>Contract_Value_png__c</field>
        <field>Subtotal</field>
        <field>Tax</field>
        <field>TotalPrice</field>
        <field>PNG_TechnicalFeasibilityApprovedDate__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andrew.yarong@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nehraaz.mustapha@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tomu.lawaniyasana@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request Approval From Pre-Sales Solution Team</label>
        <name>PNG_RequestApprovalFromPreSalesSolutionTeam</name>
    </approvalStep>
    <description>New Updated April2020</description>
    <emailTemplate>PNG_Email_Templates/PNG_Solution_Design_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 and 11 and 3 AND 4 AND 5 and 9) or (1 AND 2 and 11 and 6 and 7) or (1 AND 2 and 11 and 8 and 9 and 10)</booleanFilter>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG Draft Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PNG_OpportunityType__c</field>
            <operation>equals</operation>
            <value>ICT,ICT &amp; GSM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Needs Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.PNG_FixedVoiceLineItems__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Technical_Feasibility__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Technical Feasibility Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.PNG_FixedVoiceLineItems__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>In Solution Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Pre_Sales__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Voice_Solution_Approved__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Opportunity_Sale_Type__c</field>
            <operation>notContain</operation>
            <value>Renewal</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_SolutionDesignApprovedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusToApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionApprovedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Solution_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_SolutionDesignRejectedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionRejectedDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PNG_UpdateQuoteStatus</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Quote Solution Design Approval Process</label>
    <processOrder>6</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
