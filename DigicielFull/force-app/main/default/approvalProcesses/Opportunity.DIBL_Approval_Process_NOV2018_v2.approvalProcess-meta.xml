<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Digicel_Wholesale</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>MRC__c</field>
        <field>OTC__c</field>
        <field>Contract_Value__c</field>
        <field>Net_AOP_Installation_OTC__c</field>
        <field>Net_Contract_Value_Total__c</field>
        <field>Net_AOP_Total__c</field>
        <field>NextStep</field>
        <field>Description</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approval_Status_Proposal_Accept_Approv</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Opportunity_Change_to_Closed_Won</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Opportunity_Revenue_Validation_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Opportunity_Status_Approved_by_Finance</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RV_Proposal_Acceptance_Approved_TRUE</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>charles.manus@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>Digicel Business Opportunity</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Digicel_Company_Name__c</field>
                <operation>equals</operation>
                <value>Digicel International Business LTD</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.UserRole</field>
                <operation>startsWith</operation>
                <value>Wholesale - Head of Capacity,Wholesale - Capacity,DIBL - IoT,Digicel International Business LTD,Digicel Wholesale</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Proposal Acceptance</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Wholesale Capacity Approval - Proposal Acceptance</label>
        <name>Wholesale_Capacity_Approval_Proposal_Acceptance</name>
        <rejectionActions>
            <action>
                <name>Approval_Status_Proposal_Accept_Reject</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Opportunity_Revenue_Validation_has_been_rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Opportunity_Status_Rejected_by_Finance</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This approval process is used by the WholeSale Capacity  teams to request approval from Revenue Assurance / Finance (Solution Design &amp; Proposal Acceptance approvals are handled in this process)</description>
    <emailTemplate>Group_Approval_Email_Templates/C_CA_DigiBus_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Digicel Business Opportunity</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Digicel_Company_Name__c</field>
            <operation>equals</operation>
            <value>Digicel International Business LTD</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Submitted_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opp_Status_Submitted_Finance_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DIBL Approval Process NOV2018 v2</label>
    <postTemplate>Digicel_Business_Approval_Post</postTemplate>
    <processOrder>25</processOrder>
    <recallActions>
        <action>
            <name>Approval_Status_Approval_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
