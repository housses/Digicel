    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Chairman_s_Committee</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Haiti</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>MRC__c</field>
        <field>OTC__c</field>
        <field>Contract_Value__c</field>
        <field>Net_AOP_Installation_OTC__c</field>
        <field>Net_Contract_Value_Total__c</field>
        <field>Net_AOP_Total__c</field>
        <field>NextStep</field>
        <field>Description</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>chenet.bien-aime@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>claude-jeaner.isidor@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>girardine.eveillard@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>maudeline.val@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>murielled.danache@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nancy.baliki@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>Digicel Business Opportunity</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Digicel_Country__c</field>
                <operation>equals</operation>
                <value>Haiti</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Haiti Business Opportunities</label>
        <name>Haiti_Business_Opportunities</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>chenet.bien-aime@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>claude-jeaner.isidor@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>girardine.eveillard@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>maudeline.val@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>murielled.danache@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>nancy.baliki@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>Haiti Mobile Advertisement</value>
            </criteriaItems>
        </entryCriteria>
        <label>Haiti Mobile Advertising Opportunities</label>
        <name>Haiti_Mobile_Advertising_Opportunities</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This approval process is used by the Haiti ICT, GSM and Mobile Advertising teams to request approval from Revenue Assurance / Finance</description>
    <emailTemplate>Group_Approval_Email_Templates/C_CA_DigiBus_Approval_Notification_Template_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>User.Digicel_Country__c</field>
            <operation>equals</operation>
            <value>Haiti</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Proposal Acceptance</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile</field>
            <operation>equals</operation>
            <value>System Administrator</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Opportunity_Change_to_Closed_Won</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Revenue_Validated_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Opportunity_Revenue_Validation_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Opportunity_Status_Approved_by_Finance</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Opportunity_Revenue_Validation_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Opportunity_Status_Rejected_by_Finance</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reset_RV_Field_on_Cloned_Opportunities</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Opp_Status_Submitted_Finance_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Haiti Opportunity Approval - APR2018</label>
    <postTemplate>Digicel_Business_Approval_Post</postTemplate>
    <processOrder>4</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
