<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>StageName</field>
        <field>Amount</field>
        <field>Description</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Digicel_Trends_Draft_IO_Approval_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Op_Stage_to_IO_Revenue_Validation</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>arthur@trendmediagroup.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Draft IO</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Draft IO</label>
        <name>Draft_IO</name>
        <rejectionActions>
            <action>
                <name>Digicel_Trends_Draft_IO_Reject_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Reset_Trends_Opportunity_Stage</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Digicel_Trends_IO_Revenue_Approval_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Opportunity_Revenue_Validated_TRUE</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Trends_Stage_to_Request_for_Signe</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>selina@trendmediagroup.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tania.mahuru@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>IO Revenue Validation</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>PNG Trend</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Pending_Discount_Requests__c</field>
                <operation>equals</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>PNG Trend</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>IO Revenue Validation PNG</label>
        <name>IO_Revenue_Validation_PNG</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Digicel_Trends_IO_Revenue_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Digicel_Trends_Signed_IO_Approval_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Signed_IO_Approval</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Trends_Stage_to_Reserve_IO</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>selina@trendmediagroup.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tania.mahuru@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Request for Signed IO</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>PNG Trend</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Pending_Discount_Requests__c</field>
                <operation>equals</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Signed IO PNG</label>
        <name>Signed_IO_PNG</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Digicel_Trends_Signed_IO_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Digicel_Trends_Go_Live_Date_Approval_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Go_Live_Approval</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_to_Go_Live</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>arthur@trendmediagroup.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>Reserve the IO</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Revenue_Validated_and_Approved__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Go_Live_Date__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.RecordType</field>
                <operation>equals</operation>
                <value>PNG Trend</value>
            </criteriaItems>
        </entryCriteria>
        <label>Reserve the IO</label>
        <name>Reserve_the_IO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Digicel_Trends_Go_Live_Date_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>ONLY AFFECTS PAPUA NEW GUINEA</description>
    <emailTemplate>Digicel_Internal/Digicel_Trends_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Draft IO,IO Revenue Validation,Reserve the IO,Request for Signed IO</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>PNG Trend</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Billed_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Pending_Discount_Requests__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Digicel Trends PNG</label>
    <processOrder>24</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
