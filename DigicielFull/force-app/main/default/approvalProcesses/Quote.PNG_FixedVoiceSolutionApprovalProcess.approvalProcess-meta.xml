<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>PNG</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>QuoteNumber</field>
        <field>Name</field>
        <field>Customer_Name__c</field>
        <field>LineItemCount</field>
        <field>X1st_Monthly_Fee__c</field>
        <field>Installation_Setup_Fee__c</field>
        <field>Total_Hardware_fee__c</field>
        <field>ContractTerm__c</field>
        <field>Contract_Value_png__c</field>
        <field>Subtotal</field>
        <field>Tax</field>
        <field>PNG_TechnicalFeasibilityApprovedDate__c</field>
        <field>Grand_Total_png_sp__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>josefa.temo@digicelgroup.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request Approval From Fixed Voice Team</label>
        <name>PNG_RequestApprovalFromFixedVoiceTeam</name>
    </approvalStep>
    <emailTemplate>PNG_Email_Templates/PNG_FixedVoiceSolutionApproval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 3 AND 8 and 4 AND 5) or (1 AND 2 AND 3 AND 8 and 6 and 7)</booleanFilter>
        <criteriaItems>
            <field>Quote.RecordType</field>
            <operation>equals</operation>
            <value>Digicel PNG Draft Quote</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PNG_OpportunityType__c</field>
            <operation>equals</operation>
            <value>ICT,ICT &amp; GSM</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Voice_Solution_Line_Items__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Voice_Solution_Approved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Technical Feasibility Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>equals</operation>
            <value>Needs Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Technical_Feasibility__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Needing_Pre_Sales__c</field>
            <operation>equals</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_FixedVoiceApprovedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionApprovedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Voice_Solution_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PNG_ClearStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_SolutionDesignRejectedEmailAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PNG_UpdateQuoteStatusToRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PNG_UpdateSolutionRejectedDate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PNG_UpdateStep1InitiatedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_In_Solution_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Fixed Voice Solution Approval Process</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
