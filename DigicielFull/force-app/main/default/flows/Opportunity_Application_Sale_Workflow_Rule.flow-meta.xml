<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>Case Number: 00486774 | Application Sale Workflow Rule
Updates Opportunity status and Application Sale when Opp Stage = Proposal Acceptance</description>
    <environments>Default</environments>
    <interviewLabel>Opportunity Application Sale Rule {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity Application Sale Workflow Rule</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Auto update next steps to show &quot;Current.User&quot;: Awaiting Finance Approval</description>
        <name>Update_Next_Steps</name>
        <label>Update Next Steps</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <inputAssignments>
            <field>NextStep</field>
            <value>
                <stringValue>{!$User.FirstName} {!$User.LastName} : Awaiting Finance Approval</stringValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Next_Steps</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>StageName</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Proposal Acceptance</stringValue>
            </value>
        </filters>
        <filters>
            <field>Digicel_Country__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Trinidad and Tobago</stringValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
